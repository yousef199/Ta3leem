<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ta3leem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/cairo_regular</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AlertDialogStyle">
        <item name="fontFamily">@font/cairo_regular</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="bold_text">
        <item name="fontFamily">@font/cairo_bold</item>
    </style>
    <style name="semi_bold_text">
        <item name="fontFamily">@font/cairo_bold</item>
    </style>

    <style name="toolBarTitle">
        <item name="fontFamily">@font/cairo_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="hintApperance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">17sp</item><!-- text size in menu-->
        <item name="android:textStyle">bold</item>
    </style>
    <style name="collapsedToolbarTitle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">

        <item name="android:textSize">40sp</item>
    </style>

    <style name="customFAB">

        <item name="android:background" >@drawable/fab_label</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>